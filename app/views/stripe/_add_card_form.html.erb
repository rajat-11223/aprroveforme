<% submit_button_text ||= "Add Card" %>

<%= form_tag submit_path, method: :post, id: "payment-form" do %>
  <div>
    <label class="tw-text-lg tw-font-bold tw-text-center" for="card-element">
      Add credit or debit card
    </label>
    <div id="card-element">
      <!-- A Stripe Element will be inserted here. -->
    </div>

    <!-- Used to display form errors. -->
    <div id="card-errors" role="alert"></div>
  </div>

  <div class="tw-flex-col">
    <p class="tw-text-sm tw-text-grey-darker tw-italic">Stripe is PCI compliant and your credit card is sent directly to Stripe for processing.</p>

    <div class="tw-flex tw-flex-stretch">
      <div class="tw-flex-auto">
        <%= image_tag "stripe/powered_by_stripe@2x.png", class: "tw-h-8" %>
      </div>

      <div class="tw-flex-no-shrink tw-self-center">
        <button class="tw-px-3 tw-py-2 tw-text-black hover:tw-text-grey-darkest tw-bg-yellow-brand"><%= submit_button_text %> </button>
      </div>
    </div>
  </div>
<% end %>
