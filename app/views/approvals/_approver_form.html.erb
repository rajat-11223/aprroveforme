<tr>
  <td><%= f.input_field :name, :placeholder => "Name", label: false  %></td>
  <td><%= f.input_field :email, :placeholder => "Email address", label: false %></div>
  <td><%= f.input_field :required, collection: [ "Required", "Optional"], :default => "Required", label: false %></td>

  <% if f.object.new_record? %>
  <td><%= f.input_field :status, :as => :hidden, :input_html => { :value => "Pending" }, label: false %></td>
  <% end %>

  <% unless f.object.new_record? %>
    <% # Don't forget to name both of these '_destroy' in Rails 3 %>
    <td><%= f.check_box '_destroy' %>
    <%= f.label '_destroy', 'Remove' %></td>
  <% end %>

</tr>