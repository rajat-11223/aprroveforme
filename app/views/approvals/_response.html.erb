
<% if approver.status == "Approved" %>

<div class="row">
    <div class="large-10 large-offset-1 end columns">
      <div class="row item action-past">
        <div class="large-1 small-2 columns">
          <p class="center"><img src="/assets/approved.png"></p>
        </div>
        <div class="large-11 small-10 columns">
          <p class="title-approval-alert">You have approved this. <a href="#" role="button" data-toggle="modal" data-backdrop="false" data-reveal-id="myModal">Update your response</a>.</p><br />
        </div>
      </div>
    </div>
  </div><br />

  
<% elsif approver.status == "Declined" %>

<div class="row">
    <div class="large-10 large-offset-1 end columns">
      <div class="row item action-past">
        <div class="large-1 small-2 columns">
          <p class="center"><img src="/assets/declined.png"></p>
        </div>
        <div class="large-11 small-10 columns">
          <p class="title-approval-alert">You have declined this. <a href="#" role="button" data-toggle="modal" data-backdrop="false" data-reveal-id="myModal">Update your response</a>.</p><br />
        </div>
      </div>
    </div>
  </div><br />

<% else %>


<div class="row">
    <div class="large-10 large-offset-1 end columns">
      <div class="row item action">
        <div class="large-1 small-2 columns">
          <p class="center"><img src="/assets/action.png"></p>
        </div>
        <div class="large-11 small-10 columns">
          <p class="title-approval-alert"><%= User.find(approver.approval.owner).name %> has requested your approval. <a href="#" role="button" data-toggle="modal" data-backdrop="false" data-reveal-id="myModal">Click here to respond</a>.</p><br />
        </div>
      </div>
    </div>
  </div><br />


<% end %>



<div id="myModal" class="reveal-modal">
  
  <div class="row">
    <h3>Do you approve <%= approver.approval.title %>?</h3>
  </div>
  
  <div class="row">
    <%= simple_form_for approver.approval do |f| %>
    <div class="large-12 columns">
    <%= f.simple_fields_for approver do |builder| %>
      <%= builder.input :comments, :input_html => { :class=>"", :rows => "3" }, :placeholder => "Have any feedback?", :label => false %>
    </div>
    <% end %>
    </div>
  </br>
    <div class="row">
      <%= f.button :submit, :class => "button success large-2 columns", :name => "approval[approver][status]", :value => "Approved" %>
      <%= f.button :submit, :class => "button alert large-2 columns", :name => "approval[approver][status]", :value => "Declined" %>
     
      
    </div>
 
  <% end %>
  <a class="close-reveal-modal">&#215;</a>
</div>

