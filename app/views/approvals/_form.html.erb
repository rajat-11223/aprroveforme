<%= simple_form_for(@approval) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :link %>
    <%= f.input :description %>
    <%= f.input :deadline, as: :date %>
  </div>

  <div class="form-inputs">
    <%= f.simple_fields_for :approvers do |a| %>
      <%= a.input :name %>
      <%= a.input :email %>
      <%= a.input :required %>
      <%= a.input :status %>
    <% end %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
