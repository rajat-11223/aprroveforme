<h1>Listing approvals</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Owner</th>
    <th>Description</th>
    <th>Approver Count</th>
    <th>Deadline</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @approvals.each do |approval| %>
  <tr>
    <td><%= approval.title %></td>
    <td><%= approval.owner_user.email %></td>
    <td><%= approval.description %></td>
    <td><%= approval.approvers.count %></td>
    <td><%= approval.deadline %></td>
    <td><%= link_to 'Show', approval %></td>
    <td><%= link_to 'Edit', edit_approval_path(approval) %></td>
    <td><%= link_to 'Destroy', approval, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

