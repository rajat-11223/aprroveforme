<div class="row">
  <div class="large-9 push-3 columns">

    <div class="row">
      <div class="">
        <p class="page-title">Active Approvals</p>
      </div>
    </div>

    <%= field_set_tag "Active #{ @my_approvals.count }" do -%>
      <% @my_approvals.each do |approval| %>
        <div class="row">
          <div class="large-12 end columns">
            <div class="row item">
              <div class="large-1 small-2 columns">
                <% if approval.percentage_complete == "100%" %> <!--- SHOW /DECLINED.PNG IF DOCUMENT DECLINED -->
                  <img src="/assets/approved.png">
                <% else %>
                  <img src="/assets/open.png">
                <% end %>
              </div>
              <div class="large-8 small-10 columns">
                <p class="title"><%= link_to approval.title, approval %></p>
                <p class="details">Deadline: <%= approval.deadline.to_date  %>, <strong><%= approval.deadline_in_words %></strong>.</p>

              </div>
              <div class="large-3 columns">
                <div class="progress"><span class="meter" style="width: <%= approval.percentage_complete %>;"></span></div>
                <p class="progress-details"><%= approval.ratio_complete %> responses</p>
              </div>
            </div>
          </div>
        </div><br />
      <% end %>
    <% end -%>


  </div>

  <%= render 'shared/side_bar' %>

</div>
