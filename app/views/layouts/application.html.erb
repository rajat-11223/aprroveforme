<!DOCTYPE html>
<html lang="en">
  <head>
    <%= render 'layouts/head' %>
    <%= csrf_meta_tags %>
  </head>

  <%= body_tag do %>
    <%= render "layouts/navigation" %>
    <%= content_tag(:div, class: layout_style) do %>
      <%= render "layouts/messages" %>
      <%= yield %>
    <% end %>
    <%= render "layouts/footer" %>
  <% end %>
</html>
