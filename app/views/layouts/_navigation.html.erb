<div class="top-bar">
  <div class="top-bar-left">
    <ul class="menu">
      <li class="menu-text"><%= link_to (image_tag "logo.png"), root_url %></li>
    </ul>
  </div>

  <div class="top-bar-right">
    <ul class="menu menu-hover-lines" data-dropdown-menu>
      <li><%= link_to "Home", root_url %></li>
      <li><%= link_to "How It Works", page_path("how-it-works") %></li>
      <% if user_signed_in? %>
        <li>
          <%= image_tag current_user.picture, class: "nav-pic" %>
          <ul class="menu">
            <li class="menu-text"><%= current_user.email %></li>
            <li><%= link_to "Account", profile_account_path %></li>
            <li><%= link_to "Change Plan",pricing_path(type: "upgrade") %></li>
            <li><%= link_to "My Subscription", current_subscription_account_path %></li>
            <li><%= link_to "Payment Methods", payment_methods_account_path %></li>
            <li><hr /></li>
            <% if can? :manage, :all %>
              <li><%= link_to "Admin", users_path %></li>
            <% end %>
            <li><%= link_to "Log out", signout_path %></li>
          </ul>
        </li>
      <% else %>
        <li><%= link_to "Pricing", pricing_path %></li>
        <li><%= link_to "Login", signin_path, class: "login" %></li>
        <li><%= link_to "Sign Up Free", signin_path, class: "sign-up" %></li>
      <% end %>
    </ul>
  </div>
</div>
