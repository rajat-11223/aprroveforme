<%= content_for(:main) do %>
  <h4>Open Approvals</h4>
  <table class="dashboard-table">
    <thead>
      <tr>
        <th>
          Document Name
        </th>
        <th>
          Deadline
        </th>
        <th>
          Progress
        </th>
        <th>
          Responses
        </th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody></tbody>

    <% @open_requests.each do |approval| %>
      <tr id="<%= dom_id(approval) %>">
        <td class="bold"><%= link_to approval.title, approval %></td>
        <td><%= approval.deadline.to_date %>,
          <strong><%= approval.deadline_in_words %></td>
          <td><%= approval.percentage_complete %></td>

          <td class="listing-inquiry-status">

            <div class="flex-container align-top">
              <div class="flex-child-grow">
                <h4 class="dashboard-table-text">
                  <div class="progress">
                    <span class="meter" style="width: <%= approval.percentage_complete %>;"></span></div>
                  <p class="progress-details"><%= approval.ratio_complete %>
                    responses</p>
                </h4>
              </div>
            </div>

          </td>

          <td class="listing-inquiry-status">
            <div class="flex-container align-top">
              <div class="flex-child-grow">
                <h4 class="dashboard-table-text"><%= link_to t("approval.show.action"), approval, class: 'button small round' %></h4>
                <h4 class="dashboard-table-text"><%= link_to t("approval.clone.action"), new_approval_path(from_approval: approval), class: 'button small round' %></h4>
              </div>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <% if @open_requests.empty? %>
    <div class="text-center">
      <h3>No Records</h3>
    </div>
  <% end %>

<% end %>
