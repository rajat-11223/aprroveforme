<%= content_for(:main) do %>
  <h4>Open Approvals</h4>
  <table class="dashboard-table">
    <thead>
      <tr>
        <th>
          <a href="#">Document Name
            <i class="fas fa-caret-down"></i>
          </a>
        </th>
        <th>
          <a href="#">Deadline
            <i class="fas fa-caret-down"></i>
          </a>
        </th>
        <th>
          <a href="#">Progress
            <i class="fas fa-caret-down"></i>
          </a>
        </th>
        <th>
          <a href="#">Responces
            <i class="fas fa-caret-down"></i>
          </a>
        </th>
        <th>
          <a href="#">Action
            <i class="fas fa-caret-down"></i>
          </a>
        </th>
      </tr>
    </thead>
    <tbody></tbody>
    <% @my_approvals.each do |approval| %>
      <tr>
        <td class="bold"><%= link_to approval.title, approval %></td>
        <td><%= approval.deadline.to_date %>,
          <strong><%= approval.deadline_in_words %></td>
          <td><%= approval.percentage_complete %></td>

          <td class="listing-inquiry-status">

            <div class="flex-container align-top">
              <div class="flex-child-grow">
                <h4 class="dashboard-table-text">
                  <div class="progress">
                    <span class="meter" style="width: <%= approval.percentage_complete %>;"></span></div>
                  <p class="progress-details"><%= approval.ratio_complete %>
                    responses</p>
                </h4>
                <!--<span class="dashboard-table-timestamp">03/04/2017</span>-->
              </div>
            </div>

          </td>

          <td class="listing-inquiry-status">

            <div class="flex-container align-top">
              <div class="flex-child-grow">
                <h4 class="dashboard-table-text"><%= link_to 'View', approval, class: 'button small round' %></h4>
              </div>
            </div>

          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <% if @my_approvals.empty? %>
    <div class="text-center">
      <h3>No Records</h3>
    </div>
  <% end %>

<% end %>
