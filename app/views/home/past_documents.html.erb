<%= content_for :main do %>

  <h4>Completed Approvals</h4>
  <table class="dashboard-table">
    <thead>
      <tr>
        <th>Document Name</th>
        <th>Description</th>
        <th>Progress</th>
        <th>Deadline</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody></tbody>
    <% @my_completed_approvals.each do |approval| %>
      <tr>
        <td class="bold"><%= link_to truncate(approval.title), approval %></td>
        <td><%= truncate(approval.description) %></td>
        <td><%= approval.percentage_complete %></td>

        <td class="listing-inquiry-status">

          <div class="flex-container align-top">
            <div class="flex-child-grow">
              <h4 class="dashboard-table-text">
                <%= approval.deadline.to_date %>
              </h4>
              <span class="dashboard-table-timestamp"><%= approval.deadline_in_words %></span>
            </div>
          </div>

        </td>

        <td class="listing-inquiry-status">

          <div class="flex-container align-top">
            <div class="flex-child-grow">
              <h4 class="dashboard-table-text"><%= link_to 'View', approval, class: 'button small round' %></h4>
              <h4 class="dashboard-table-text"><%= link_to 'Use As Template', new_approval_path(from_approval: approval), class: 'button small round' %></h4>
            </div>
          </div>

        </td>
      </tr>
    <% end %>
  </tbody>
  </table>

  <% if @my_completed_approvals.empty? %>
  <div class="text-center">
    <h3>No Records</h3>
  </div>
  <% end %>

<% end %>
