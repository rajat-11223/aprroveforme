          <li class="<%= active_class([signed_off_approvals_account_path]) %>"><%= link_to 'Signed Off', signed_off_approvals_account_path %></li>
        </ul>
      </div>
    </section>

    <section class="section <%= active_class([payment_methods_account_path, update_card_account_path]) %>">
      <p class="title"><%= link_to 'Payment Methods', payment_methods_account_path %></p>
    </section>

    <section class="section <%= active_class([current_subscription_account_path,subscription_histories_account_path]) %>">
      <p class="title"><a href="#">Subscriptions</a></p>
      <div class="content">
        <ul class="side-nav">
          <li class="<%= active_class([current_subscription_account_path]) %>"><%= link_to 'Current Subscription', current_subscription_account_path %></li>
          <li class="<%= active_class([subscription_histories_account_path]) %>"><%= link_to 'Subscription Histories', subscription_histories_account_path %></li>
        </ul>
      </div>
    </section>

    <section class="section <%= @page_title == 'FAQ' ? 'active': '' %>">
      <p class="title"><%= link_to 'FAQ', page_path('faq') %></p>
    </section>

