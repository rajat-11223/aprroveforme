      <div class="content">
        <ul class="side-nav">
          <li class="<%= active_class([active_approvals_account_path]) %>"><%= link_to 'Active', active_approvals_account_path %></li>
          <li class="<%= active_class([completed_approvals_account_path]) %>"><%= link_to 'Completed', completed_approvals_account_path %></li>
