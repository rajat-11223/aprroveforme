<div class="large-3 pull-9 columns">
  <div class="docs section-container accordion" data-section="accordion" data-options="one_up: false">
    <section class="section <%= active_class([profile_account_path])%>">
      <p class="title"><%= link_to 'Profile', profile_account_path %></p>
    </section>

    <section class="section <%= active_class([active_approvals_account_path,completed_approvals_account_path,
                                              pending_approvals_account_path,signed_off_approvals_account_path])%>">
